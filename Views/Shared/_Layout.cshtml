<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - AusRosterPlanner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="icon" type="image/png" href="~/favicon.png" asp-append-version="true" />
</head>
<body>
    <!-- Top Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Shift" asp-action="Index">Roster Planner</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" id="exportExcelLink">Export Excel</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="logoutLink" href="#">Logout</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4 mb-5">
        @RenderBody()
    </main>

    <footer class="text-center text-muted small mt-auto mb-3">
        <hr />
        <p>© @DateTime.Now.Year ShiftPlanner. All rights reserved.</p>
    </footer>
</body>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
<script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
<script src="~/js/shift.js" asp-append-version="true"></script>
</html>
