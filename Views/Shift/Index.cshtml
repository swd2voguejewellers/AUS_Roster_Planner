@{
    ViewData["Title"] = "Weekly Roster Planner";

    // Compute current week
    var today = DateTime.Today;
    var startOfWeek = today.AddDays(-(int)today.DayOfWeek);
    var endOfWeek = startOfWeek.AddDays(6);

    var weekDays = Enumerable.Range(0, 7).Select(i => startOfWeek.AddDays(i)).ToList();
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h3 class="mb-0">Weekly Roster Planner</h3>
            <small class="text-muted">Select a week to view or plan roster</small>
        </div>

        <div>
            <select id="weekSelect" class="form-select form-select-sm w-auto d-inline-block"></select>
        </div>
    </div>


    <form id="rosterForm">
        <div class="table-responsive">
            <table class="table table-bordered text-center align-middle" id="rosterTable">
                <thead class="table-light">
                    <tr>
                        <th class="bg-secondary text-white">Day</th>
                        <!-- Employee headers filled dynamically -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var date in weekDays)
                    {
                        var isWeekend = date.DayOfWeek == DayOfWeek.Saturday || date.DayOfWeek == DayOfWeek.Sunday;
                        <tr class="@(isWeekend ? "table-secondary" : "")">
                            <td class="fw-bold bg-light">
                                @date.ToString("dddd")<br />
                                <small class="text-muted">@date.ToString("MMM dd")</small>
                            </td>
                            <!-- JS will add employee columns -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary mt-3">Save Roster</button>
        </div>
    </form>
</div>

<div class="mt-5">
    <h4>Weekly Summary</h4>
    <div class="table-responsive">
        <table class="table table-bordered text-center align-middle" id="summaryTable">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Role</th>
                    <th>Total Hours</th>
                    <th>OT Hours</th>
                    <th>Leave Days</th>
                </tr>
            </thead>
            <tbody>
                <!-- Filled dynamically -->
            </tbody>
        </table>
    </div>
</div>

